.blc-BoardContainer {
  /* "height" set in style property on element */
  border-style: none dashed;
  border-width: 0 0.25em;
  border-color: <<color tab-divider>>;
  padding: 0.25em 0.5em 0em 0.5em;
  /* . . . . . . . . . */
  display: flex;
  flex-direction: column;
  flex-wrap: nowrap;
  justify-content: flex-start;
  align-content: stretch;
  align-items: stretch;
}

.blc-BoardTitle{
  flex: 0 0 auto;
  padding: 0;
  margin: 0;
}
/*
.tc-single-tiddler-window .blc-BoardTitle, .tc-tab-content .blc-BoardTitle {
  display: block;
}
*/
.blc-BoardTitle-h2 {
  margin: 0 0 0.25em 0;
  display: inline-block;
}
.tc-subtitle.blc-subtitle {
  font-size: 1em;
  margin: 0 0 0.5em 0;
  color: <<color tiddler-title-foreground>>;
}

.blc-ListTitle {
  flex: 0 0 auto;
  align-self: auto;
  border-style: solid solid none solid;
  border-color: <<color tab-divider>>;
  border-width: 1px;
  background-color: <<color tab-background-selected>>;
  padding: 0.75em 0.5em 0.375em 0.5em;
}
.blc-titleTweak {
  display: inline;
  margin: 0;
}

.blc-scrollable {
  flex: 1 1 0em;
  overflow: hidden;
  padding: 0;
  margin: 0.5em -0.25em 0 -0.25em;
  /* . . . . . . . . . */
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: flex-start;
  align-content: stretch;
  align-items: stretch;
  /* . . . . . . . . . */
}

.blc-ListContainer {
  /* half pixel padding on each side eliminates a horizontal scroll when content should fit perfectly. */
  padding: 0 0.5px;
  margin: 1.5em 0;
  flex: 1 1 0px;
  overflow: auto;
  /* . . . . . . . . */
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: flex-start;
  align-content: stretch;
  align-items: stretch;
}

.blc-List-layOuter {
  position: relative;
  width: 0; /*value 0 for even flexbox widths*/
  min-width: 15.5em;
  /* "min-width" set in style property on element */
  /* "max-width" set in style property on element */
  margin: 0 0.25em; /*margin collapse does not happen in flexbox*/
  flex: 1 1 auto;
  align-self: auto;
}
.blc-List-layInner {
  display: flex;
  flex-direction: column;
  flex-wrap: nowrap;
  justify-content: flex-start;
  align-content: stretch;
  align-items: stretch;
}
/*This is to maintain missing margin on right side,
 * due to browser's calcuation of visible area.
