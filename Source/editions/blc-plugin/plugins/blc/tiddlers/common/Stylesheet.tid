  height: 100%;
}
.blc-popupTag-vis {
  background-color: white;
  max-width: 80%;
}
.blc-popupTag-vis > .tc-edit-tags {
  -webkit-box-shadow: none;
  -moz-box-shadow: none;
  box-shadow: none;
}
.blc-popupTag-vis .tc-block-dropdown {
  min-width: 0;
  max-width: 120%;
  max-height: 15em;
