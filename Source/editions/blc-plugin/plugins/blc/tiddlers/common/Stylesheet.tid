}

.blc-CardContainer-flexItem {
  flex: 1 1 auto;
  align-self: auto;
}
.blc-CardContainer-vis.blc-CardContainer-vis {
  /* EXTENDS tc-edit-tags */
  background: <<color page-background>>;
  padding: 1em 0.25em 1em 0.25em;
  line-height: 1.25;
}
.blc-CardContainerSearchList-vis.blc-CardContainerSearchList-vis {
  /* EXTENDS tc-edit-tags */
  background: none;
  box-shadow: none;
  padding: 1em 0.25em 1em 0.25em;
  line-height: 1.25;
  background: <<color tab-background-selected>>;
  border-style: dashed;
}
.blc-CardSearchList-vis.blc-CardSearchList-vis {
  border: 1px dashed <<color tab-foreground>>;
}
.blc-SearchList-Container {
  /* "flex" set in style property on element */
  padding: 1.5em 0.5em 1.5em 0;
  border-right: 0.25em dashed #ddd;
  /* . . . . . . . . */
  display: flex;
  flex-direction: column;
}
.blc-Card.blc-Card {
  /* EXTENDS tc-tiddler-frame */
  min-height: 2.5em;
  margin-bottom: 0.5em;
  padding: 0 0.5em;
}
.blc-shorttext_container > img, .blc-shorttext_container > svg {
  height: 1em;
  width: auto;
}
.blc-Card-visDownsize{
  font-size: 1.25em;
}
.blc-CardEditTitle > .tc-titlebar{
  font-size: 0.75em;
}

.blc-CardText > div, .blc-CardText > p, .blc-CardText > img {
  margin-top: 0.5em;
  margin-bottom: 0.5em;
}
.blc-CardContainer-vis ul, .blc-CardContainer-vis ol {
  padding-left: 1.25em;
}
.blc-CardFloats {
  margin: 0;
  padding: 0;
  clear: right;
  float: right;
  fill: <<color tiddler-controls-foreground>>;
}
.blc-CardIconFloat {
  /* "fill" set in style property on element */
  max-height: 1em;
  margin: 0.5em 0.125em 0 0;
  padding: 0;
  float: left;
  clear: none;
}
.blc-CardIcon-Container {
  position: absolute;
  bottom: 0;
  right: 0.25em;
}
.blc-CardIcon-HasText {
  display: inline-block;
  fill: <<color message-foreground>>;
}
.blc-CardIcon-HasList {
  display: inline-block;
  fill: <<color message-foreground>>;
}
.blc-CardTagPreview {
  position: absolute;
  top: -1px;
  left: 0;
